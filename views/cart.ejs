<% let t=0; cart.forEach(cartdata => { t=1%>
    <tr class="text-center" id=<%=cartdata.itemname %> data-aos="flip-left">
        <td>
            <p class="text-uppercase text-primary text-center" ><%= cartdata.itemname %> </name>
